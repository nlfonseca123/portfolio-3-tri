#!/bin/bash
clear #Limpa o terminal
echo "Seu nome de usuário é:" #Printa no terminal o texto entre aspas.
whoami #Printa o nome de usuário
echo "" #Printa no terminal o texto entre aspas.

echo "Info de dia e hora atual:" #Printa no terminal o texto entre aspas.
date #Printa a data e a hora
echo "" #Printa no terminal o texto entre aspas.

echo "O script está executando do diretório:" #Printa no terminal o texto entre aspas.
pwd #Printa o caminho referente ao diretório atual
